
<% layout( 'm_layout' ) -%>


<div class="container">
<br><br><br><br>
    <h1>Getting started with JSON Form</h1>
    <form class="modules-edit"></form>
    <div id="res" class="alert"></div>
</div>
   
    <script src='/vi-lab/js/jquery.min.js' type='text/javascript'></script>
		<script type="text/javascript" src="/vi-lab/js/underscore.js"></script>
		<script type="text/javascript" src="/vi-lab/js/jsv.js"></script>
    <script src="/vi-lab/js/jsonform.js"></script>
    
  
 
    <script type="text/javascript">
      $('form.modules-edit').jsonForm({
        schema: {
          name: {
            type: 'string',
            title: 'Name',
            default: '<%= item.modultitel %>',
            required: true
          },
          age: {
            type: 'number',
            title: 'Age'
          }
        },
        onSubmit: function (errors, values) {
          if (errors) {
            $('#res').html('<p>I beg your pardon?</p>');
          }
          else {
            $('#res').html('<p>Hello ' + values.name + '.' +
              (values.age ? '<br/>You are ' + values.age + '.' : '') +
              '</p>');
          }
        }
      });
    </script>
